@model HealthInsurance.Models.PoliciesReqDetail

@{
    ViewData["Title"] = "Buy";
}

<h1>@ViewData["Title"]</h1>

<hr />


<div class="row">
   

    <div class="col-md-8">
        <h4>Order For Insurence Policy</h4>
        <hr />

        <form asp-action="Buy" method="post">

            <div class="form-group row">
                <label class="col-sm-3 col-form-label" for="policyId">   
            </label>
                <div class="col-sm-9">
                    <label asp-for="PolicyId" class="control-label"></label>
                    <input asp-for="PolicyId" class="form-control" />
                    <span asp-validation-for="PolicyId" class="text-danger"></span>
                </div>
            </div>

       

            <div class="form-group row">
                <label class="col-sm-3 col-form-label" for="policyName">
                </label>
                <div class="col-sm-9">
                    <label asp-for="PolicyName" class="control-label"></label>
                    <input asp-for="PolicyName" class="form-control" />
                    <span asp-validation-for="PolicyName" class="text-danger"></span>
                </div>
            </div>

            <div class="form-group row">
                <label class="col-sm-3 col-form-label" for="policyAmount">
                </label>
                <div class="col-sm-9">
                    <label asp-for="PolicyAmount" class="control-label"></label>
                    <input asp-for="PolicyAmount" class="form-control" />
                    <span asp-validation-for="PolicyAmount" class="text-danger"></span>
                </div>
            </div>


            <div class="form-group row">
                <label class="col-sm-3 col-form-label" for="Emi">
                </label>
                <div class="col-sm-9">
                    <label asp-for="Emi" class="control-label"></label>
                    <input asp-for="Emi" class="form-control" />
                    <span asp-validation-for="Emi" class="text-danger"></span>
                </div>
            </div>


            <div class="form-group row">
                <label class="col-sm-3 col-form-label" for="requestDate">
                </label>
                <div class="col-sm-9">
                        <label asp-for="RequestDate" class="control-label"></label>
                    <input asp-for="RequestDate" class="form-control" type="date" id="policyStartdate" name="policyStartdate" required />
                    <span asp-validation-for="RequestDate" class="text-danger"></span>
                </div>
            </div>


            <div class="form-group row">
                <label class="col-sm-3 col-form-label" for="companyName">
                </label>
                <div class="col-sm-9">
                    <label asp-for="CompanyName" class="control-label"></label>
                    <input asp-for="CompanyName" class="form-control" />
                    <span asp-validation-for="CompanyName" class="text-danger"></span>
                </div>
            </div>


            <div class="form-group row">
                <label class="col-sm-3 col-form-label" for="companyId">
                </label>
                <div class="col-sm-9">
                    <label asp-for="CompanyId" class="control-label"></label>
                    <input asp-for="CompanyId" class="form-control" />
                    <span asp-validation-for="CompanyId" class="text-danger"></span>
                </div>
            </div>

            <br />

            <div class="form-group row">
                <div class="col-sm-9 offset-sm-3">
                    <button class="btn btn-primary" type="submit">Add Policy</button>
                    <a class="btn btn-secondary" asp-action="Index">Cancel</a>
                </div>
        </form>


        @section Scripts {
            @{
                await Html.RenderPartialAsync("_ValidationScriptsPartial");
            }
        }

